@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category Listed";
}
<h3>List Category</h3>
<a asp-action="Create" asp-controller="Category" >Add Category</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Slug</th>
      <th scope="col">Category Status</th>

    </tr>
  </thead>
  <tbody>
        @foreach (var item in Model)
        {
        <tr>
          <th scope="row">@item.Id</th>
          <td>@item.Name</td>
              <td>@Html.Raw(@item.Description)</td>
        
              <td>@item.Slug</td>
                   <td>@if(@item.Status==1)
                    {
                        <span class="text text-success">Show</span>
                    }
                    else
                    {
                                <span class="text text-danger">Hide</span> 
                    }
                </td>
              <td>
                          <a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-warning btn-sm" >Category Product</a>
                                          <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion"  >Category Product</a>
              </td>


        </tr>

        }
  </tbody>
</table>