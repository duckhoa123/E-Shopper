@model UserRole
@{
	ViewData["title"] = "Edit User";
}
<h4>Edit User</h4>
<div class="col-md-9">
	<form asp-action="Edit" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger">

		</div>
		<div class="form-group" style="display: none;" >
			<label>Id</label>
			<input asp-for="Id" class="form-control"/>
			<span asp-validation-for="Id" class="text-danger"/>
		</div>
		<div class="form-group">
			<label>Username</label>
			<input asp-for="Username" class="form-control"/>
			<span asp-validation-for="Username" class="text-danger"/>
		</div>
		
		<div class="form-group">
			<label>Email</label>
			<textarea asp-for="Email" class="form-control"></textarea>
			<span asp-validation-for="Email" class="text-danger"/>
		</div>
		<div class="form-group">
			<label>Role</label>
			<select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">

			</select>
			<span asp-validation-for="Role" class="text-danger"/>
		</div>
		<div class="form-group">
			<button class="btn btn-primary">Edit</button>
		</div>
			</form>
	<a asp-action="Index">Back To List Product</a>
	</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

