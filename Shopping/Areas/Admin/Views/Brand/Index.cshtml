@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Brand Listed";
}
<h3>List Brand</h3>
<a asp-action="Create" asp-controller="Brand" >Add Brand</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Slug</th>
      <th scope="col">Brand Status</th>

    </tr>
  </thead>
  <tbody>
        @foreach (var item in Model)
        {
            <tr>
              <th scope="row">@item.Id</th>
              <td>@item.Name</td>
                  <td>@Html.Raw(@item.Description)</td>

                  <td>@item.Slug</td>
                       <td>@if (@item.Status == 1)
                    {
                                <span class="text text-success">Show</span>
                    }
                    else
                    {
                                        <span class="text text-danger">Hide</span> 
                    }
                    </td>
                  <td>
                              <a asp-action="Edit" asp-controller="Brand" asp-route-Id="@item.Id" class="btn btn-warning btn-sm" >Edit Brand</a>
                                              <a asp-action="Delete" asp-controller="Brand" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion"  >Delete Brand</a>
                  </td>


            </tr>

        }
  </tbody>
</table>
