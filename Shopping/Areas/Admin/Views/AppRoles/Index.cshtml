 @model IQueryable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["title"] = "Role Listed";
}
<h3>List Brand</h3>
<a asp-action="Create" asp-controller="AppRoles" >Add Role</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
     

    </tr>
  </thead>
  <tbody>
        @foreach (var item in Model)
        {
                <tr>
                  <th scope="row">@item.Id</th>
                  <td>@item.Name</td>
                     
                      <td>
                                      <a asp-action="Edit" asp-controller="AppRoles" asp-route-Id="@item.Id" class="btn btn-warning btn-sm" >Edit Roles</a>
                                                          <a asp-action="Delete" asp-controller="AppRoles" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion"  >Delete Roles</a>
                      </td>


                </tr>

        }
  </tbody>
</table>